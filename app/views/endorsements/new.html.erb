<div class="col-sm-6">
  <h3><%= @user.name %></h3>
  <%= image_tag(@user.image_link || "baby_goat", height: 200, width: 200 ) %>
</div>

<div class="col-sm-6">
  <h3>Endorse <%= @user.name %></h3>
  <%= form_for [@user, @endorsement] do |f| %>

    <%= f.text_area :body, size: "50x10" %>

    <%= f.hidden_field :endorser, value: current_user.name %>

    <%= f.submit %>

  <% end %>
</div>
