<div class="col-sm-3">
  <h3><%= @user.name %></h3>
  <%= image_tag(@user.image_link || "http://kingofwallpapers.com/goat/goat-004.jpg", height: 200, width: 200 ) %>
</div>

<div class="col-sm-3">
  <h3>Rewards</h3>
  <br>
  <% @user.rewards.each do |reward| %>

    <%= image_tag(reward.image_link, height: 120, width: 120) %>

  <% end %>
</div>

<div class="col-sm-6">
  <h3>Endorsements (<%= @user.endorsements.count %>)</h3>

  <% @user.endorsements.each do |endorsement| %>

    <h4><%= endorsement.endorser %> said:</h5>
    <p><%= endorsement.body %></p>

  <% end %>

  <% if current_user && @user != current_user %>
    <p><%= link_to "Write New Endorsement", new_user_endorsement_path(@user) %></p>
  <% end %>
</div>
